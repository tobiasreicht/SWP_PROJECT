{
  "name": "swp-film-tracker-backend",
  "version": "1.0.0",
  "description": "Netflix-style Movie & Series Tracker API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "seed": "tsx prisma/seed.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:reset": "prisma db push --force-reset && npm run seed",
    "db:reset-empty": "prisma db push --force-reset",
    "user:create": "tsx scripts/create-user.ts",
    "watchlist:add": "tsx scripts/add-watchlist.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.19",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.7.0",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.0"
  }
}
